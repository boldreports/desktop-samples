<Window x:Class="EmployeeSalesDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sync="http://schemas.syncfusion.com/wpf"
    xmlns:BoldReports="clr-namespace:BoldReports.UI.Xaml;assembly=BoldReports.WPF"
    Title="Employee Sales Demo" WindowStartupLocation="CenterScreen" WindowState="Maximized" Icon="App.ico">
    <Grid Name="gridSkeleton" Margin="0,0,0,0">
        <!--Control place holder panel-->
        <Border Name="groupBoxReportViewer" CornerRadius="5" Margin="2" Padding="0" Background="Transparent" >
            <Grid>                
                <Border Background="Transparent" CornerRadius="5" BorderBrush="White" BorderThickness="0.5">
                    <Rectangle Fill="White" Opacity="0.2" />
                </Border>
                
                <!-- Adding Report Viewer control-->
                <BoldReports:ReportViewer Name="reportViewerControl" /> 
            </Grid>
        </Border>
    </Grid>
</Window>

